<% if @set_days && @set_days.include?(day) %>
	<input type="hidden" id="<%= day %>_hidden" name="schedule[<%= day %>]" value="true" />
	<%= button_to_function day[0,1], :id => day, :class => 'toggled_button' do |page| toggle_button(page, day) end %>
<% else %>
	<input type="hidden" id="<%= day %>_hidden" name="schedule[<%= day %>]" value="" />
	<%= button_to_function day[0,1], :id => day, :class => 'untoggled_button' do |page| toggle_button(page, day) end %>
<% end %>
		