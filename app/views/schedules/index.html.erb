<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
		<li><%= link_to 'Edit Host', edit_host_path(@host) %></li>
		<li><%= link_to 'New Schedule', new_host_schedule_path(@host) %>
	</ul>
<% end %>
<h2>Backup Schedules for Host <%= @host.name %></h2>
<table id="stdtable" class="sortable" cellspacing="0">
	<tr>
		<th scope="col" class="nobg" id="tblheader">Schedules</th>
		<th scope="col" id="tblheader">Start</th>
		<th scope="col" id="tblheader">Repeat</th>
		<th scope="col" id="tblheader">Frequency</th>
		<th scope="col" id="tblheader">Status</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Enable/Disable</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Edit</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Delete</th>
	</tr>
	<% if @schedules.empty? %>
		<tr>
    		<td>No Records</td>
    	</tr>
	<% else %>
		<%= render :partial => 'schedule', :collection => @schedules %>
	<% end %>
</table>
