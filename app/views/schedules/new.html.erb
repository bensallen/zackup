<% content_for 'head' do %>
	<%= calendar_date_select_includes "plain" %>
<% end %>

<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'Edit Host', edit_host_path(@host) %></li>
		<li><%= link_to 'View Schedules', host_schedules_path(@host) %>
	</ul>
<% end %>

<h2>Create Backup Schedule for <%= @host.name %></h2>

<div class='schedule'>
<% form_for @schedule, :url => host_schedules_path(@host) do |f| %>
	<%= f.hidden_field(:host_id, :value => @host.id)%>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
	<br/>
  <div class='submit'><%= f.submit "Next" %></div>
<% end %>
</div>
<div class='clear'></span>