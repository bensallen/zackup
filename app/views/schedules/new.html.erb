<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
		<li><%= link_to 'View Config Items', config_items_path %></li>
	</ul>
<% end %>

<h2>Create Backup Schedule for <%= @host.name %></h2>

<div class='schedule'>
<% form_for @schedule, :url => host_schedule_path(@host) do |f| %>
	<%= f.hidden_field(:host_id, :value => @host.id)%>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
	<br/>
  <div class='submit'><%= f.submit "Create" %></div>
<% end %>
</div>
<div class='clear'></span>