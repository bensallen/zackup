<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'New Host', new_host_path %></li>
		<li><%= link_to 'View Configuration Items', config_items_path %></li>
	</ul>
<% end %>

<h2>Hosts</h2>
<table id="stdtable" class="sortable" cellspacing="0">
	<tr>
		<th scope="col" class="nobg" id="tblheader">Hosts</th>
		<th scope="col" id="tblheader">Hostname</th>
		<th scope="col" id="tblheader">IP Address</th>
		<th scope="col" id="tblheader">Status</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Enable/Disable</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Schedule</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Restore</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Edit</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Delete</th>
	</tr>
	<% if @hosts.empty? %>
		<tr>
    		<td>No Records</td>
    	</tr>
	<% else %>
		<%= render :partial => 'host', :collection => @hosts %>
	<% end %>
</table>
