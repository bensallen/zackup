<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
	</ul>
<% end %>

<h1>Create New Host</h1>

<% form_for @host, :url => hosts_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
	<%= render :partial => "config_item", :collection => @default_items if @default_items %>
	<%= f.label "Host Type" %><br/>
	<%= collection_select(:config_item, @host_type_item.id, @config_groups, :id, :name, {:prompt => true},
		  {
				:onchange => remote_function(
					:method => "get",
					:with => "'id='+value",
					:url => get_sub_form_hosts_path
				)
			}
	) if @config_groups %>
	<div id='sub_form'></div>

  <%= f.submit "Create" %>
<% end %>