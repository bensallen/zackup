<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
		<li><%= link_to 'Delete Host', host_path(@host), :method => :delete %></li>
		<li><%= link_to 'Show Backup Schedules', host_schedules_path(@host) %>
	</ul>
<% end %>

<h1>Edit Host</h1>

<% form_for @host, :url => host_path do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
	<%= render :partial => "host_config", :collection => @host_configs %>
	<%= f.label "Host Type" %><br/>
	<%= select(:host_config, @host_type.id, @config_groups.collect {|cp| [cp.name, cp.id]}, { :selected => @host_type.value.to_i },
		  {
				:onchange => remote_function(
					:method => "get",
					:with => "'id='+value",
					:url => get_sub_form_hosts_path
				)
			}
	) if @config_groups && @host_type %>
	
	<div id='sub_form'>
		<%= yield :sub_form %>
	</div>
  <%= f.submit "Update" %>
<% end %>