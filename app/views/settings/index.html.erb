<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
	</ul>
	
<% end %>

<% form_for settings do |f| %>
	<%= f.error_messages %>
	<table class='table_form'>
	  <tr>
			<td class='form_label'><%= f.label :registration_enable, "User Registration Enable" %></td>
			<td><%= f.check_box :registration_enable %></td>
		</tr>
	</table>
	<%= submit_tag 'Update' %>
<% end %>