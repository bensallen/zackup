<% rowclass = cycle('','alt', :name => "row_class") %>
<tr>
	<td scope="row" class='<%= cycle('spec','specalt') %>'><%= node.hostname %></td>
	<td class='<%= rowclass %>'><%= node.ip_address %></td>
	<td class='<%= rowclass %>'><%= node.description %></td>
	<td class='<%= rowclass %>'><%= node.services %></td>
	<td class='<%= rowclass %>'><%= node.last_seen %></td>
	<td class='<%= rowclass %>'><%= link_to image_tag('edit.png'), edit_node_path(node) %></td>
	<td class='<%= rowclass %>'><%= link_to image_tag('delete.png'), node_path(node), :method => :delete, :confirm => "Are you sure you want to delete the node: #{node.name}" %>
</tr>
