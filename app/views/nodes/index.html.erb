<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'New Node', new_node_path %>
	</ul>
<% end %>

<h2>Nodes</h2>
<table id="stdtable" class="sortable" cellspacing="0">
	<tr>
		<th scope="col" class="nobg" id="tblheader">Hostname</th>
		<th scope="col" id="tblheader">IP Address</th>
		<th scope="col" id="tblheader">Description</th>
		<th scope="col" id="tblheader">Services</th>
		<th scope="col" id="tblheader">Status</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Edit</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Delete</th>
	</tr>
	<% if @nodes.empty? %>
		<tr>
    		<td>No Records</td>
    	</tr>
	<% else %>
		<%= render :partial => 'node', :collection => @nodes %>
	<% end %>
</table>
