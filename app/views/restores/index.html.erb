<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
		<li><%= link_to 'All Hosts', hosts_path %></li>
		<li><%= link_to 'Show Host', host_path(@host) %>
		<li><%= link_to 'Create Restore Job', new_host_restore_path(@host) %></li>
	</ul>
<% end %>

<h2>Restore Jobs</h2>
<table id="stdtable" class="sortable" cellspacing="0">
	<tr>
		<th scope="col" class="nobg" id="tblheader">Name</th>
		<th scope="col" id="tblheader">Schedule</th>
		<th scope="col" id="tblheader">Status</th>
		<th scope="col" id="tblheader">Download</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Edit</th>
		<th scope="col" id="tblheader" class="sorttable_nosort">Delete</th>
	</tr>
	<% if @restores.empty? %>
		<tr>
    		<td>No Records</td>
    	</tr>
	<% else %>
		<%= render :partial => 'restore', :collection => @restores %>
	<% end %>
</table>
