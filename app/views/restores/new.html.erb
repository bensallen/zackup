<% content_for 'sub_menu' do %>
	<ul id="sub_menu">
			<li><%= link_to 'View Host', host_path(@host) %></li>
	</ul>
<% end %>

<h2>Create New Restore Job</h2>
<% form_for [@host, @restore] do |f| %>
	<%= f.error_messages %>
	<table class='table_form'>
		<%= f.hidden_field :user_id, { :value => current_user.id } %>
		<tr>
			<td class='labelform'><%= f.label :name %></td>
			<td><%= f.text_field :name %></td>
		</tr>
		<tr>
			<td class='labelform'><%= f.label "Schedule" %></td>
			<td><%= collection_select(:schedule, :schedule_id, @schedules, :id, :name)%></td>
		</tr>
	</table>
	<%= f.submit 'Start' %>
<% end %>